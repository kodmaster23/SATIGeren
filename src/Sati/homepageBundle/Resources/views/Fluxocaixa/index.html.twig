    <div class="section" id="tabela">
        <div class="container">
            <div class="row">
                <div class="col-md-12" id="menuCor">
                    <h1 class="text-center">Menu</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 text-left">
                    <a class="active btn btn-block btn-link" data-toggle="modal" data-target="#caixaModal"><img src="deposito_banco.jpg" class="center-block img-responsive img-rounded"></a>
                </div>
                <div class="col-md-3 text-left">
                    <a class="active btn btn-block btn-link" data-toggle="modal" data-target="#minicursoModal"><img src="índice.png" class="center-block img-responsive img-rounded"></a>
                </div>
                <div class="col-md-3 text-left">
                    <a class="active btn btn-block btn-link" data-toggle="modal" data-target="#minicursoModal"><img src="40860937-Speaker-guest-lecture-speech-icon-vector-image-Can-also-be-used-for-education-academics-and-science--Stock-Vector.jpg" class="center-block img-responsive img-rounded"></a>
                </div>
                <div class="col-md-3">
                    <a><img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive"></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <a><img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive"></a>
                </div>
                <div class="col-md-3">
                    <a><img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive"></a>
                </div>
                <div class="col-md-3">
                    <a><img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive"></a>
                </div>
                <div class="col-md-3">
                    <a><img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive"></a>
                </div>
            </div>
        </div>
    </div>


    <div class="fade modal text-center" id="caixaModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Caixa
                        <br>
                    </h4>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-info btn-lg" aria-label="Left Align" data-toggle="modal"  data-target="#modalNew">Create a new entrie</button>
                    <table id ="tabelateste" class="table table-striped table-bordered" cellspacing="0" width="100%"">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Descrição</th>
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('fluxocaixa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.tipo }}</td>
                                <td>{{ entity.descricao }}</td>
                                <td>R${{ entity.valor }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('fluxocaixa_show', { 'id': entity.id }) }}">show</a>
                                        </li>
                                        <li><a class="myButtons" data-toggle="modal" data-target="#editModal" href="{{ path('fluxocaixa_edit', { 'id': entity.id }) }}">Edit2</a>
                                            <a data-toggle="modal" data-target="#editModal" data-id="{{ entity.id }}" class="btn btn-xs btn-default" data-load-remote="{{ path('fluxocaixa_edit', { 'id': entity.id }) }}" data-remote-target="#editModal .modal-body>Edit<i
                                                        class="fa fa-edit"></i></a>

                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Fechar</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('#tabelateste').DataTable();
        } );

        $("a").click(function(e) {
            e.preventDefault();
            $("#editFrame").attr("src", $(this).attr("href"));
            $("a").removeClass("active");
            $(this).addClass("active");
        })

    </script>

    <div class="fade modal text-center" id="modalNew">
        <div class="modal-dialog modal-sm">

            {{ render(controller('SatihomepageBundle:Fluxocaixa:new')) }}

        </div>
    </div>
    <div id="editModal" class="modal fade modal text-center">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <iframe name="editFrame" id="editFrame" width="235" height="315"></iframe>
            </div>
        </div>
    </div>



    {% endblock %}
